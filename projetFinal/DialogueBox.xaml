<Window x:Class="projetFinal.DialogueBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projetFinal"
        mc:Ignorable="d"
        Title="Choisir une couleur" Height="120" Width="250" WindowStartupLocation="CenterOwner" MinWidth="250" MinHeight="120" MaxWidth="250" MaxHeight="120" >
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="CouleurSaisie" Text="Entrez une couleur (ex: #FFAA33):" Margin="0,0,0,10" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="60" Margin="0,0,10,0" Click="OkDB_Click"/>
            <Button Content="Annuler" Width="60" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
